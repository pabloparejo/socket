bottom-shadow(n, blur, opac)
    box-shadow 0px (1*n)px (blur*1)px rgba(0,0,0,opac)

right-shadow(n, blur, opac)
    box-shadow (1*n)px 0px (blur*1)px rgba(0,0,0,opac)

inset-right-shadow(n, blur, opac)
    box-shadow inset (-1*n)px 0px (blur)px rgba(0,0,0,opac)

text-shadow(n, blur, opac)
    text-shadow 0px (1*n)px (blur*1)px rgba(0,0,0,opac)


shadow-z0()
    box-shadow 0 0px 5px rgba(0,0,0,0.5)

shadow-z1()
    box-shadow 0px 0px 3px rgba(0,0,0,0.5)

shadow-z1-right()
    box-shadow 2px 0 2px rgba(0,0,0,0.25)

shadow-z2-right()
    box-shadow 4px 0 4px rgba(0,0,0,0.28)

shadow-z3-right()
    box-shadow 6px 0 4px rgba(0,0,0,0.28)

shadow-z1-top()
    box-shadow 0px -1px 2px rgba(0,0,0,0.1)

shadow-z0-bottom()
    box-shadow 0 1px 1px rgba(0,0,0,0.35)
    z-index 0

shadow-z1-bottom()
    box-shadow 0 1px 2px rgba(0,0,0,0.35)
    z-index 1

shadow-z1-bottom-strong()
    box-shadow 0 2px 3px rgba(0,0,0,0.5)
    z-index 1

shadow-z2-bottom()
    box-shadow 0 2px 2px rgba(0,0,0,0.28)
    z-index 2

shadow-z3-bottom()
    box-shadow 0 4px 4px rgba(0,0,0,0.28)
    z-index 3

shadow-z0-button()
    box-shadow 0 2px 2px rgba(0,0,0,0.5)

shadow-z1-button()
    box-shadow 0 1px 2px rgba(0,0,0,0.3)

shadow-z2-button()
    box-shadow 0 2px 3px rgba(0,0,0,0.25)

shadow-z3-button()
    box-shadow 0 3px 8px rgba(0,0,0,0.35)

shadow-z1-top-light()
    box-shadow 0 -1px 1px rgba(0,0,0,0.2)
    z-index 1

.shadow-z0
    shadow-z0()

.shadow-right-z1
    shadow-z1-right()

.shadow-right-z2
    shadow-z2-right()

.shadow-right-z3
    shadow-z3-right()

.shadow-top-z1
    shadow-z1-top()

.shadow-bottom-z0
    shadow-z0-bottom()

.shadow-bottom-z1
    shadow-z1-bottom()

.shadow-bottom-strong-z1
    shadow-z1-bottom-strong()

.shadow-bottom-z2
    shadow-z2-bottom()

.shadow-bottom-z3
    shadow-z3-bottom()

.shadow-button-z0
    shadow-z0-button()

.shadow-button-z1
    shadow-z1-button()

.shadow-button-z2
    shadow-z2-button()

.shadow-top-light-z1
    shadow-z1-top-light()
